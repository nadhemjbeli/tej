{% extends 'base_back.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Lieu_prise</th>
                <td>{{ reservation.lieuPrise }}</td>
            </tr>
            <tr>
                <th>Lieu_reprise</th>
                <td>{{ reservation.lieuReprise }}</td>
            </tr>
            <tr>
                <th>Date_prise</th>
                <td>{{ reservation.datePrise ? reservation.datePrise|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date_reprise</th>
                <td>{{ reservation.dateReprise ? reservation.dateReprise|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Heure_prise</th>
                <td>{{ reservation.heurePrise }}</td>
            </tr>
            <tr>
                <th>Heure_reprise</th>
                <td>{{ reservation.heureReprise }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reservation_index') }}">back to list</a>

    <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">edit</a>

