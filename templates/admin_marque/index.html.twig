{% extends 'base_back.html.twig' %}

{% block title %}Marque index{% endblock %}

{% block body %}
    <h1>Marque index</h1>

    <div class="row justify-content-center">

        <div class="col-xl-10">

            <div class="row">


                <div id="responsiveTables" class="mb-5">

                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table mb-0">
                                    <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Nom</th>
                                        <th>Description</th>
                                        <th>actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for marque in marques %}
                                        <tr>
                                            <td>{{ marque.id }}</td>
                                            <td>{{ marque.nom }}</td>
                                            <td>{{ marque.description }}</td>
                                            <td>
                                                <a href="{{ path('app_admin_marque_show', {'id': marque.id}) }}">show</a>
                                                <a href="{{ path('app_admin_marque_edit', {'id': marque.id}) }}">edit</a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="4">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a href="{{ path('app_admin_marque_new') }}">Create new</a>
{% endblock %}
