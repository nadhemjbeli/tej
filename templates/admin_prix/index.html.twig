                    <a href="{{ path('app_admin_voiture_show', {'id': prix.voiture.id}) }}">{{ prix.voiture }}</a>
                </td>
                <td>
                    <a href="{{ path('app_admin_prix_show', {'id': prix.id}) }}">show</a>
                    <a href="{{ path('app_admin_prix_edit', {'id': prix.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_prix_new') }}">Create new</a>
{% endblock %}
