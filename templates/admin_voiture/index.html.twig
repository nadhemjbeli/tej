{% extends 'admin_base.html.twig' %}

{% block title %}Voiture index{% endblock %}

{% block body %}
    <h1>Voiture index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Marque</th>
                <th>Carburant</th>
                <th>Transmission</th>
                <th>Puissance</th>
                <th>Annee</th>
                <th>Categorie</th>
                <th>Agence</th>
                <th>image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for voiture in voitures %}
            <tr>
                <td>{{ voiture.id }}</td>
                <td>{{ voiture.marque }}</td>
                <td>{{ voiture.carburant }}</td>
                <td>{{ voiture.transmission }}</td>
                <td>{{ voiture.puissance }}</td>
                <td>{{ voiture.annee }}</td>
                <td>{{ voiture.categorie }}</td>
                <td>{{ voiture.agence }}</td>
                <td>
                    <img src="{{ asset('admin/img/voiture/'~voiture.image) }}" class="img-fluid d-block m-auto" alt="{{ voiture.marque }}" width="50px">
                </td>
                <td>
                    <a href="{{ path('app_admin_voiture_show', {'id': voiture.id}) }}">show</a>
                    <a href="{{ path('app_admin_voiture_edit', {'id': voiture.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_voiture_new') }}">Create new</a>
{% endblock %}
